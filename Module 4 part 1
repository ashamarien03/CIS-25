#include <iostream>
using namespace std;

int main()
{
    int choice;

    cout << "Menu Options" << endl;
    cout << "1. Say Hello" << endl;
    cout << "2. Say Goodbye" << endl;
    cout << "3. Exit" << endl;

    cout << "Enter your choice: ";
    cin >> choice;

    if (choice == 1)
    {
        cout << "Hello!" << endl;
    }

    if (choice == 2)
    {
        cout << "Goodbye!" << endl;
    }

    if (choice == 3)
    {
        cout << "Exiting program." << endl;
    }
    if (choice < 1 || choice > 3)
    {
        cout << "Invalid choice." << endl;
    }

    return 0;
}

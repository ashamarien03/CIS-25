#include <iostream>
#include "menu.h"
using namespace std;

int main() {
    int choice;

    do {
        showMenu();
        cout << "Enter choice: ";
        cin >> choice;

        if(choice == 1)
            add();
        else if(choice == 2)
            subtract();
        else if(choice == 3)
            multiply();
        else if(choice == 4)
            cout << "Goodbye\n";
        else
            cout << "Invalid choice\n";

    } while(choice != 4);

    return 0;
}
